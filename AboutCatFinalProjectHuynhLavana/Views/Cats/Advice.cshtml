    }

    .nfc-cat-paws {
        background: url('/images/5.jpg') 25px/205px;
        height: 70px;
        width: 100%;
    }

    button, input[type=submit] {
        width: 300px;
        margin: 15px;
        font-size: 16px;
        background: #0c0c0c;
        border-radius: 18px;
        border: 3px solid #f0ebeb;
    }

