        overflow: hidden;
        width: 220px;
        text-align: center;
        padding: 10px;
    }

        .cat-item img {
            width: 100%;
            height: auto;
            border-bottom: 1px solid #ddd;
            margin-bottom: 5px;
        }


    main {
        display: flex;
        justify-content: center;
        align-items: center;
    }



    #Add-book-form-section {
