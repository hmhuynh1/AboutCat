@model Cat
@{
    ViewBag.Title = "Cat Advice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<main class="flex-columnav bg-secondary">


    <div class="sections flex-row w-full justify-content-center gap-2">
        <section id="Add-book-form-section" class="p-3">
            <h3>Cat Advice Submits</h3>
            <form method="post" id="book-submit-form" asp-action="Advice" class="d-flex flex-column gap-2">
                <fieldset>
                    <label for="">Cat Name: </label>
                    <input asp-for="CatName" name="catName" type="text" placeholder="">
                </fieldset>

                <fieldset>
                    <label for="">Cat Breed</label>
                    <input asp-for="CatBreed" name="catBreed" type="text" placeholder="">
                </fieldset>

                <fieldset>
                    <label for="">Food Brand</label>
                    <input asp-for="CatFavoriteFood" name="CatFavoriteFood" type="text" placeholder="">
                </fieldset>
                <fieldset>
                    <label for="">Toy Brand</label>
                    <input asp-for="CatFavoriteToy" name="CatFavoriteToy" type="text" placeholder="">
                </fieldset>
                <fieldset>
                    <label for="">Advice</label>
                    <input asp-for="Advice" name="advice" type="text" placeholder="">
                </fieldset>

                <fieldset>
                    <input class="text-light" type="submit" value="SUBMIT" />
                </fieldset>


            </form>
        </section>

        <section id="hero-section">

            <div id="center">
                <section id="search-form-section d-flex flex-column gap-4">

                    <form asp-action="Advice" method="get" class="d-flex flex-column gap-4">

                        <input type="search" class="w-full p-2" name="query" placeholder="Type cat advice..." id="search-box" />

                        <div class="flex-row justify-content-center">
                            <button type="submit" id="search-btn">
                                Search
                            </button>
                            <button type="clear" id="clear-btn" name="clear">
                                clear
                            </button>

                        </div>
                    </form>

                    <section id="book-details" class="mt-4">


                        <table class="w-full table table-primary">
                            <thead>
                                <tr>
                                    <td>Cat Name</td>
                                    <td>Cat Breed</td>                                 
                                    <td>Cat Foods</td>
                                    <td>Cat Toys</td>                                    
                                    <td>Advice</td>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.results != null)
                                {
                                    @foreach (Cat c in ViewBag.results)
                                    {
                                        <tr>
                                            <td>@c.CatName</td>
                                            <td>@c.CatBreed</td>
                                            <td>@c.CatFavoriteFood</td>
                                            <td>@c.CatFavoriteToy</td>                                          
                                            <td>@c.Advice</td>
                                            
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </section>

                </section>
            </div>

        </section>
    </div>
</main>

<style>
