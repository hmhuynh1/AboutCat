<!-- _Layout.cshtml -->
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        body, html {
            background-color: #7c7373; /* Light pink background */
            margin: 0;
            padding: 20;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        nav {
            /* background-color: hotpink; /* Change this to any color you like */
            
            background-color: #5dbab1;
            padding: 20px 0;
            box-shadow: 0 2px 2px rgb(52 172 145 / 80%);
            }


            nav ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
                display: flex;
                justify-content: center;
            }

                nav ul li {
                    margin: 0 10px;
                }

                    nav ul li a {
                        text-decoration: none;
                        color: #171616;/* Slightly pinkish font color */
                        font-weight: bold;
                        padding: 10px 15px;
                        background-color: #FFFFFF; /* Button background color */
                        border-radius: 5px;
                        transition: background-color 0.3s, color 0.3s, box-shadow 0.3s;
                        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
                    }

                        nav ul li a:hover {
                            background-color: #e4db4f; /* Button hover background color */
                            color: #5dbab1 
                        }

        
    </style>
</head>
<body>
    <nav>
        <ul>
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li><a href="@Url.Action("Gallery", "Cats")">Gallery</a></li>
            <li><a href="@Url.Action("Advice", "Cats")">Advice</a></li>
            <li><a href="@Url.Action("Favorites", "Cats")">Favorites</a></li>
            <li><a href="@Url.Action("Admin", "Management")">AboutUS</a></li>
        </ul>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>

